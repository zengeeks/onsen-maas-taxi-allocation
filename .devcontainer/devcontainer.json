// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.177.0/containers/javascript-node
{
  "name": "Node.js",
  "image": "mcr.microsoft.com/vscode/devcontainers/javascript-node:0-14",
  // Set *default* container specific settings.json values on container create.
  "settings": {
    "terminal.integrated.profiles.linux": {
      "bash": {
        "path": "/bin/bash"
      }
    }
  },
  // Add the IDs of extensions you want installed when the container is created.
  "extensions": [
    "dbaeumer.vscode-eslint",
    "ms-vscode.js-debug-nightly",
    "ms-azuretools.vscode-azurefunctions",
    "octref.vetur"
  ],
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [
    8080, // for Vue application
    9222, // for Debugging of Vue application
    4280, // for static-web-apps-cli
    7071 // for azure-functions-core-tools
  ],
  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "npm install -g azure-functions-core-tools@3 @azure/static-web-apps-cli@0.6.1 --unsafe-perm true && npm install",
  // Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
  "remoteUser": "node"
}